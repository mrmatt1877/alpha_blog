<div class="container">
  <h2 class="center-align flow-text">Title: <%= @article.title %></h2>
  <div class="row">
    <% if @article.user %>
    <div class="col s12 center-align">
      <ul>
        <div>
          <li>Created by:</li>
          <li><%= link_to gravatar_for(@article.user), user_path(@article.user)%></li>
          <li><%= link_to @article.user.username, user_path(@article.user) %></li>
          <li><%= pluralize(@article.user.articles.count, "article") if @article.user.articles %></li>
        </div>
      </ul>
    </div>
    <% end %>
    <div class="col s12 m10 offset-m1">
      <div class="card-panel blue lighten-5">
        <span class="flow-text"><%= simple_format(@article.description) %></span>
      </div>
    </div>
  </div>


  <%= link_to 'Edit this article', edit_article_path(@article) %> |
  <%= link_to 'Back to articles listing', articles_path %>
</div>
